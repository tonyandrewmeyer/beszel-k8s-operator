{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git"],
    "network": {
      "allowUnixSockets": [
        "/run/snapd.socket"
      ],
      "allowLocalBinding": true
    }
  },
  "permissions": {
    "allow": [
      "Bash(source:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(git commit:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run tox:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run ty:*)",
      "Bash(uv run pyright:*)",
      "Bash(python3:*)",
      "Bash(charmcraft:*)",
      "Bash(juju:*)",
      "WebFetch(domain:documentation.ubuntu.com)",
      "WebFetch(domain:www.contributor-covenant.org)",
      "WebFetch(domain:docs.zizmor.sh)",
      "WebFetch(domain:charmhub.io)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:diataxis.fr)",
      "MultiEdit(*.py)"
    ],
    "ask": [
    ],
    "deny": [
    ],
    "additionalDirectories": ["../concierge"],
    "defaultMode": "acceptEdits",
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff format --fix"
          }
        ]
      }
    ]
  }
}
